// @import url(http://fonts.googleapis.com/css?family=Roboto:400,100,300);

p.lead
	text-indent 50px

a
	&.navbar-brand
		img
			height 100px
			display inline-block
			position relative
			top -38px

.navbar-default
	background-color rgba(255, 255, 255, 1)
	
	
.img-circle
	border-radius 20px

// ::: Servicios :::
.col-sm-4, .col-sm-3
	margin-top 20px	
.icon
	height 150px
	width 150px
	border-radius 50%
	box-shadow 0px 0px 6px -1px #777
	background-color white
	padding-top 20px
	img
		margin-top 10px
		height 95%
p.left
	text-align justify

// :: Productos ::
.icon-2
	height 200px
	width 200px
	box-shadow 0px 0px 6px -1px #777
	background-color white
	padding-top 20px
	img
		height 90%
		width 90%

@media(min-width:1200px)
	.navbar-default-big
		height 100px

	a.navbar-brand-big img
		height 200px
		display inline-block
		position relative
		top -65px
		

	.navbar-nav-big
		li
			a
				font-family 'Roboto', sans-serif
				font-weight 100
				font-size 25px
				line-height 70px
				background-color rgba(255, 255, 255, 0)
				transition background-color 1s
			&:hover
				transition background-color 1s
				background-color rgba(255, 255, 255, 1)
			&:active
				border-bottom 4px solid #ccc